<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PerfilActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Editar"
            android:visibility="visible"
            android:backgroundTint="#00BCD4"/>

        <Button
            android:id="@+id/btnCancelarPerfil"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Cancelar"
            android:visibility="gone"
            android:backgroundTint="#DF1616"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <LinearLayout
                android:id="@+id/perfilUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/borderlayout">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niño/Niña"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edNombrePerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"
                    android:hint="Nombre"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edApellidosPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edFechaPerfil"
                    android:hint="Introduce tu fecha de nacimiento"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"

                    />

                <EditText
                    android:id="@+id/edDniPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduzca Dni del niño/a"
                    android:inputType="textPersonName"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edTelefonoPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu teléfono"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edCorreoPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:hint="Introduce tu correo"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edUsuarioPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu usuario"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edContrasenaPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu contraseña"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edEstadoPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Estado"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:focusable="false"
                    android:clickable="false"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/perfilTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/borderlayout"
               >

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor/a"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edNombreTutorPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"
                    android:hint="Nombre Tutor/a"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edApellidosTutorPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:hint="Apellido Tutor/a"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edFechaTutorPerfil"
                    android:hint="Introduce tu fecha de nacimiento"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edDNITutorPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduzca su DNI"
                    android:inputType="textPersonName"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edTelefonoTutorPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu teléfono"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/edCodSeguridadPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce el código de seguridad"
                    android:inputType="textPassword"
                    android:maxLength="5"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:clickable="false"/>

            </LinearLayout>


            <Button
                android:id="@+id/btnActualizarPerfil"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/colorButton"
                android:visibility="gone"/>
        </LinearLayout>


    </ScrollView>


</LinearLayout>