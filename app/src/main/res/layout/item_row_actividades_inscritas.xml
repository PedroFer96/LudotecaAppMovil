<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewActividadInscrita"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_layout_actividad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewActividadInscritaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Actividad"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewActividadInscritaEmpleado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del empleado Largo"
                    android:textColor="#595656"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewActividadInscritaDia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dia"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  -  "/>

                    <TextView
                        android:id="@+id/textViewActividadInscritaHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hora"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  -  "/>

                    <TextView
                        android:id="@+id/textViewActividadInscritaSala"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sala"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonabandonarActividadInscrita"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:backgroundTint="#E61C1C"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Abandonar"
            android:textSize="10sp"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>