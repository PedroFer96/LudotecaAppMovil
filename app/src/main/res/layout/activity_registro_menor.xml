<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RegistroMenor">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro usuario"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"

                android:background="@drawable/borderlayout">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niño/Niña"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edNombre"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"
                    android:hint="Nombre"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edApellidos"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edFecha"
                    android:hint="Introduce tu fecha de nacimiento"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edDNI"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduzca Dni del niño/a"
                    android:inputType="textPersonName"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edTelefono"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu teléfono"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edCorreo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:hint="Introduce tu correo"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edUsuario"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu usuario"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edContrasena"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu contraseña"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/borderlayout">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor/a"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edNombreTutor"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="10dp"
                    android:hint="Nombre Tutor/a"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edApellidosTutor"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:hint="Apellido Tutor/a"
                    android:inputType="textPersonName"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edFechaTutor"
                    android:hint="Introduce tu fecha de nacimiento"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edDNITutor"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduzca su DNI"
                    android:inputType="textPersonName"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edTelefonoTutor"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce tu teléfono"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edCodSeguridad"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Introduce el código de seguridad"
                    android:inputType="textPassword"
                    android:maxLength="5"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/borderlayout">

                <TextView
                    android:drawableLeft="@drawable/ic_informacion"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si el niño no posee dni, deje el campo vacío"
                    android:textSize="18sp"
                    android:color="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    android:drawableLeft="@drawable/ic_informacion"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si el niño no posee numero de teléfono o un correo electrónico, introduzca los datos del tutor/a"
                    android:textSize="16sp"
                    android:color="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"

                    />

            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btnRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/colorButton"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>